<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                              android:layout_width="wrap_content"
                                              android:layout_height="wrap_content">

    <FrameLayout
        android:id="@+id/fl_inner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <ImageView
            android:id="@+id/iv_center_inner"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:padding="6dp"
            android:src="@drawable/iv_float2"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/iv_center_inner2"
            android:layout_width="37dp"
            android:layout_height="37dp"
            android:layout_gravity="center"
            android:src="@drawable/yx"/>

        <ImageView
            android:id="@+id/iv_left_inner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:alpha="0.5"
            android:src="@drawable/iv_left"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/iv_right_inner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:alpha="0.5"
            android:src="@drawable/iv_right"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tv_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@android:color/white"/>
    </FrameLayout>

    <RelativeLayout
        android:id="@+id/rl_fl"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:background="@drawable/bg"
        android:layout_centerInParent="true">

        <FrameLayout
            android:id="@+id/fl_leida"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="79dp">

            <ImageView
                android:id="@+id/iv_leida_selected"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerInside"
                android:src="@drawable/chooseed"
                android:visibility="gone"/>

            <ImageView
                android:id="@+id/iv_leida"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerInside"
                android:src="@drawable/leida"/>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/fl_question"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="30dp">

            <ImageView
                android:id="@+id/iv_question_selected"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/chooseed"
                android:visibility="gone"/>

            <ImageView
                android:id="@+id/iv_question"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/question"/>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/fl_user"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="45dp">

            <ImageView
                android:id="@+id/iv_user_selected"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/chooseed"
                android:visibility="gone"/>

            <ImageView
                android:id="@+id/iv_user"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/user"/>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/fl_gift"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="11dp"
            android:layout_marginRight="15dp">

            <ImageView
                android:id="@+id/iv_gift_selected"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/chooseed"
                android:visibility="gone"/>

            <ImageView
                android:id="@+id/iv_gift"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/gift"/>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/fl_msg"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="3dp"
            android:layout_marginTop="30dp">

            <ImageView
                android:id="@+id/iv_msg_selected"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/chooseed"
                android:visibility="gone"/>

            <ImageView
                android:id="@+id/iv_msg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/msg"/>
        </FrameLayout>

    </RelativeLayout>

</RelativeLayout>